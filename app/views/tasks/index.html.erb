<h1>If you can dream it, you can TODO it!</h1>
<ul id="todos">
  <% tasks.each do |task| %>
    <li class="task">
      <a href="/tasks/<%= task.id %>"> <%= task.description %></a>
    </li>
  <% end %>
</ul>

<% if tasks.length() == 0 %>
  <h1>There are no tasks remaining! You should add one!</h1>
<% end %>

<a href="/tasks/new">Add task</a>
