<h1>Edit Task <%= task.id %></h1>
<form method="POST" action="/tasks/<%= task.id %>" enctype="multipart/form-data">
<input type="hidden" name="_method" value="PUT">
<div>
    <label for="task_input">Task Description</label>
    <input id="task_input" type="text" name="description" value="<%=task.description%>" />
</div>
  <button type="submit">Save</button>
</form>
<form method="POST" action="/tasks/<%= task.id %>" enctype="multipart/form-data">
<input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>
